<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/goalItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="16dp">

        <!-- Goal Title -->
        <TextView
            android:id="@+id/goalTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/sun_points"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Take a stretch break" />

        <!-- Sun Points -->
        <TextView
            android:id="@+id/sun_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:drawablePadding="4dp"
            android:textColor="#FFC107"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_sun"
            app:layout_constraintBottom_toBottomOf="@id/goalTitle"
            app:layout_constraintEnd_toStartOf="@id/checkboxContainer"
            app:layout_constraintTop_toTopOf="@id/goalTitle"
            tools:text="3" />

        <!-- Frequency Row -->
        <LinearLayout
            android:id="@+id/frequencyContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goalTitle">

            <ImageView
                android:id="@+id/frequencyIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                app:srcCompat="@drawable/ic_repeat" />

            <TextView
                android:id="@+id/goalFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#757575"
                android:textSize="12sp"
                tools:text="Daily" />
        </LinearLayout>

        <!-- Edit Button -->
        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit goal"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="@id/frequencyContainer"
            app:layout_constraintStart_toEndOf="@id/frequencyContainer"
            app:layout_constraintTop_toTopOf="@id/frequencyContainer"
            app:srcCompat="@drawable/ic_edit" />

        <!-- Checkbox Container -->
        <FrameLayout
            android:id="@+id/checkboxContainer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/checkboxBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Complete goal"
                app:srcCompat="@drawable/checkbox_unchecked" />

            <ImageView
                android:id="@+id/checkmark"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:contentDescription="Completed"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_check" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <!-- Edit Goal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editGoalContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#64a399"
        app:cornerRadius="0dp"
        android:padding="16dp">

        <!-- Goal Edit Mode -->
        <TextView
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="30dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_close"
            android:contentDescription="@string/close_button_description"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/goalTitleEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/editTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!-- Start Date Section -->
        <LinearLayout
            android:id="@+id/startDateSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/goalTitleEdit">

            <ImageView
                android:id="@+id/startDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_calendar"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textSize="16dp"
                android:text="Start Date"
                app:layout_constraintTop_toBottomOf="@id/startDate"/>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/editStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Select Your Start Date"
                    android:gravity="end"
                    android:layout_marginEnd="15dp"/>
                <ImageView
                    android:id="@+id/startDateArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_arrow_drop_down" />
            </LinearLayout>

        </LinearLayout>

        <!-- End Date Section -->
        <LinearLayout
            android:id="@+id/endDateSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/startDateSection">

            <ImageView
                android:id="@+id/endDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_calendar"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:textSize="16dp"
                android:text="End Date"
                app:layout_constraintTop_toBottomOf="@id/startDate"/>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/editEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="No End Date Selected"
                    android:gravity="end"
                    android:layout_marginEnd="15dp"/>
                <ImageView
                    android:id="@+id/endDateArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_arrow_drop_down" />
            </LinearLayout>
        </LinearLayout>


        <!-- Frequency Section -->
        <LinearLayout
            android:id="@+id/editfrequencySection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/endDateSection">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/editfrequencyIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/ic_repeat" />

                <TextView
                    android:id="@+id/editgoalFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginEnd="20dp"
                    android:text="Repeat" />
            </LinearLayout>

            <Spinner
                android:id="@+id/editFrequencyBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_drop_down"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <!-- Sun Points Section -->
        <LinearLayout
            android:id="@+id/sunPointsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/editfrequencySection">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/sunImage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/ic_sun"
                    app:layout_constraintTop_toBottomOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:textSize="16dp"
                    android:text="Difficulty"
                    app:layout_constraintTop_toBottomOf="@id/startDate"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/editSunDifficulty"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Difficulty"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sunPointsSection"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:text="DELETE"
            app:cornerRadius="7dp"
            android:backgroundTint="@color/red"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveEditGoalBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            app:layout_constraintTop_toBottomOf="@id/sunPointsSection"
            app:layout_constraintEnd_toEndOf="parent"
            app:cornerRadius="7dp"
            android:layout_marginTop="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>